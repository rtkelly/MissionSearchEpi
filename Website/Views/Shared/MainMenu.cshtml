@using EPiServer.SpecializedProperties

@model BaseSite.Models.Blocks.MainMenuBlock


@if (Model.Links != null && Model.Links.Any())
{ 
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.Title <span class="caret"></span></a>

        <ul class="dropdown-menu">
            @foreach (var linkItem in Model.Links ?? Enumerable.Empty<LinkItem>())
            {
                <li>@Html.PageLink(linkItem)</li>
            }
        </ul>
       
    
    </li>
} 
else
{
 <li class="@(Model.IsActive ? "active" : "")"><a href="@Model.Link">@Model.Title</a></li>
   
}